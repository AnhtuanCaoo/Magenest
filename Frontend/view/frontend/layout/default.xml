<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magenest\Frontend\Block\Modal"
                   template="Magenest_Frontend::modal.phtml"
                   name="modal"
                   as="modal"/>
            <block class="Magenest\Frontend\Block\Banner"
                   template="Magenest_Frontend::banner.phtml"
                   name="banner"
                   as="banner"/>

        </referenceContainer>
        <referenceContainer name="header.panel">
            <block class="Magenest\Frontend\Block\Background" name="header.content" template="Magenest_Frontend::background.phtml" before="header.links" />
        </referenceContainer>

    </body>
</page>
